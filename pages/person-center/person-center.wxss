.page-top{
  width: 750rpx;
  height: 480rpx;
  background: linear-gradient(to top , skyblue, #00CCFF);
  box-shadow: 10rpx 10rpx 10rpx rgb(223, 221, 221);
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-top: 120rpx
}
.userinfo-nickname {
  color: white;
  margin-top: 10rpx
}
.page-middle{
  margin-top: 20rpx;
  box-shadow: 10rpx 10rpx 10rpx rgb(223, 221, 221);
}
